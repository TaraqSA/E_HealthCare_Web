@model E_HealthCare_Web.ViewModels.AskQuestionViewModel
@{
    ViewBag.Title = "General Surgery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <style type="text/css">

        .header-section {
            padding: 10px 0 10px 0px;
        }

        .description-section {
            padding: 10px 5px 10px 10px
        }

        .inner-description {
            padding: 10px 100px 10px 100px;
            border-right: 1px solid #ccc;
        }

        .column1 {
            height: 500px;
            display: flex;
            align-items: center; /*center div vertically*/
            justify-content: flex-start; /*position div horizontally*/
            background-image: url('../Images/Hospital-theme-background.jpg');
            background-size: cover;
            background-color: #dfece2;
            background-position: center;
            background-blend-mode: lighten;
            margin-left: -15px;
        }

        .inner-content1 {
            display: flex;
            justify-content: flex-start;
            flex: 1;
            padding-left: 5em;
        }

        .column2 {
            position: relative;
            height: 500px;
            padding: 0px 5px 5px 30px;
        }

            .column2::before {
                content: '';
                bottom: 0;
                left: 6%;
                position: absolute;
                border-bottom: 1px solid #ccc;
                width: 74%;
            }


        .logo-style {
            height: auto;
            padding-top: 25px;
        }

        .logo-description {
            margin-top: -20px;
            margin-left: 20px;
        }

            .logo-description > h1 {
                font-size: calc(3em + 1vw);
                font-family: 'Arial Rounded MT';
            }

            .logo-description > p {
                font-size: calc(0.75em + 1vw);
                font-family: 'Arial Rounded MT';
                color: grey;
                margin-left: 5px;
            }

        .input-editor {
            max-width: 80%;
            height: 50px;
            font-size: 16px;
            border-radius: 5px;
            padding-left: 10px;
            background-color: rgba(0,255,153,0.05);
        }

        .input-button {
            min-width: 80%;
            height: 50px;
            font-size: x-large;
            border-radius: 5px;
            border: none;
            background-color: #00ff99;
            color: white;
            text-align: center;
        }

            .input-button:hover {
                background-color: #00cc7a;
            }

        .text-danger {
            font-family: 'Arial Rounded MT';
        }

        .checkbox-custom-style {
            pointer-events: none;
        }

        .span-text {
            font-family: 'Arial Rounded MT';
            color: grey;
        }

        .div-width {
            max-width: 80%;
            display: block;
        }

        .gs-description {
            font-family: 'Arial Rounded MT';
            color: gray;
        }

            .gs-description p b, .gs-description h1 {
                color: black;
            }

        .quick-links {
            padding: 10px 0px 10px 20px;
            line-height: 2;
            font-family: initial;
        }

        .quick-link-text a {
            font-weight: 500;
            display: flex;
            align-items: flex-start;
            padding: 15px 0px 5px 15px;
        }

            .quick-link-text a:hover {
                text-decoration: none;
                font-weight: 800;
            }


        .glyphicon-plus-sign {
            font-size: 30px;
        }

        .glyphicon-calendar {
            font-size: 30px;
        }

        .text-position {
            display: inline-block;
            font-size: 18px;
            padding: 0px 0px 0px 5px;
            margin: 0px 0px -15px 0px;
        }
    </style>
}

<div class="row">
    <div class="header-section col-lg-12 col-md-12">
        <div class="column1 col-lg-8 col-md-8">
            <div class="inner-content1">
                <div class="logo-style">
                    <img src="~/Images/logo/surgery.png" />
                </div>
                <div class="logo-description">
                    <h1>General Surgery</h1>
                    <p>
                        The General Surgery Department at E-HealthCare comprises of highly experienced senior surgeons and competent staff.
                    </p>
                </div>
            </div>
        </div>
        <div class="column2 col-lg-4 col-md-4">
            <h1>Have a Question ?</h1>
            @using (@Html.BeginForm("SubmittedQuestion", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken();
                <div>
                    @Html.EditorFor(p => p.FullName, "FullName", new { htmlAttributes = new { @class = "form-control input-editor", @placeholder = "Enter Name" } })
                    @Html.ValidationMessageFor(p => p.FullName, "", new { @class = "text-danger" })
                </div><br />
                <div>
                    @Html.EditorFor(p => p.Email, "Email", new { htmlAttributes = new { @class = "form-control input-editor", @placeholder = "Enter Email Address" } })
                    @Html.ValidationMessageFor(p => p.Email, "", new { @class = "text-danger" })
                </div><br />
                <div>
                    @Html.EditorFor(p => p.Contact, "Contact", new { htmlAttributes = new { @class = "form-control input-editor", @placeholder = "Enter Mobile Number" } })
                    @Html.ValidationMessageFor(p => p.Contact, "", new { @class = "text-danger" })
                </div><br />
                <div class="div-width">
                    @Html.CheckBoxFor(p => p.PrivacyPermission, new { @class = "checkbox-custom-style", @checked = "true" })
                    <span class="span-text">
                        By Clicking Submit, I agree to have read and understood the @Html.ActionLink("Terms and Conditions", "TermsAndCondition")
                        and @Html.ActionLink("Privacy Policy", "PrivacyPolicy") of E_HealthCare & give my consent to contact me.
                    </span>

                </div><br />
                <div>
                    <input type="submit" value="Submit" class="input-button check" />
                </div>
            }
        </div>
    </div>
</div>

<div class="row">
    <div class="description-section col-lg-12 col-md-12">

        <div class="inner-description col-lg-8 col-md-8">
            <div>
                @Html.ActionLink("E-HealthCare", "Index") >> @Html.ActionLink("Services", "Services") >> @Html.ActionLink("General Surgery", "GeneralSurgery")
            </div>
            <section class="gs-description">
                <h1>General Surgery</h1>
                <p>
                    General surgery department at E-HealthCare comprises of highly experienced senior surgeons and competent staff.
                    Our doctors help in making the surgical experience easier and more stress-free for the patient suffering from diseases of the oesophagus,
                    stomach, colon, liver, gallbladder, bile duct, abdomen, breast, @Html.ActionLink("thyroid", "Thyroid") gland and @Html.ActionLink("hernias", "Hernias").
                </p>
                <p>
                    <b>E-HealthCare, which is a centre of excellence for various surgical procedures, uses the latest technology for -</b>
                </p>
                <ul>
                    <li>
                        GI Surgery & Laparoscopic Surgery
                    </li>
                    <li>
                        Laparoscopic Appendectomy
                    </li>
                    <li>
                        @Html.ActionLink("Bariatric Surgery", "BariatricSurgery") including Sleeve Gastrectomy
                    </li>
                    <li>
                        Gastric Bypass Surgery
                    </li>
                    <li>
                        Diagnostic Laparoscopy
                    </li>
                    <li>
                        General Surgery including cyst removals, incision & drainage of abscesses
                    </li>
                    <li>
                        Abdominal Surgery
                    </li>
                    <li>
                        Advanced Haemorrhoidal Surgery
                    </li>
                    <li>
                        Advanced @Html.ActionLink("Hernia", "Hernia") Repair & Hydrocele Surgery (adult and paediatric)
                    </li>
                    <li>
                        @Html.ActionLink("Gallbladder", "Gallbladder") Surgery
                    </li>
                </ul>

                <p>
                    <b>
                        The general surgery department often collaborates with other departments to do surgeries that need more than one kind of specialists.
                        General surgeons work with specialists in-
                    </b>
                </p>
                <ul>
                    <li>
                        Hepato-biliary
                    </li>
                    <li>
                        Pancreatic and colorectal surgery
                    </li>
                    <li>
                        Breast and endocrine surgery
                    </li>
                    <li>
                        Venaes and arterial surgery
                    </li>
                </ul>


                <h3>
                    Laparoscopic surgical techniques
                </h3>
                <p>
                    The @Html.ActionLink("general surgeons", "GeneralSurgeons") at Narayana Hospital also use Laparoscopic surgical techniques whenever possible.
                    The laparoscopic procedures have many benefits such as smaller incisions,
                    less post-operative discomfort, quicker recovery, shorter hospital stay-less blood loss and minimal scars.
                </p>
            </section>
        </div>

        <div class="quick-links col-lg-4 col-md-4">
            <h3>
                Quick Links
            </h3>
            <div class="quick-link-text">
                <a href="@Url.Action("FindDoctors","Patient")"><span class="glyphicon glyphicon-plus-sign"></span><div class="text-position">Find a Doctor</div></a>
            </div>
            <div class="quick-link-text">
                <a href="@Url.Action("BookAppointment","Patient")"><span class="glyphicon glyphicon-calendar"></span><div class="text-position">Book an Appointment</div></a>

            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/Utility.js"></script>
}