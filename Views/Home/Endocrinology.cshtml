                color: black;
            }

        .endocrinology-description-FAQ {
            width: 100%;
            margin: 90px auto;
        }

            .endocrinology-description-FAQ .custom-accordion {
                position: relative;
                margin: 10px 10px;
            }

            .endocrinology-description-FAQ .accordio-label {
                position: relative;
                padding: 2px 0;
                color: #00acee;
                cursor: pointer;
                border-top: 1px solid gray;
                border-bottom: 1px solid gray;
                background-color: rgba(211,211,211,0.2)
            }

                .endocrinology-description-FAQ .accordio-label::before {
                    content: '+';
                    color: gray;
                    position: absolute;
                    top: 50%;
                    right: 5px;
                    font-size: 30px;
                    transform: translateY(-50%);
                    -webkit-transform: translateY(-50%);
                }

            .endocrinology-description-FAQ .accordion-content {
