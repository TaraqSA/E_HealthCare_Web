
@{
    ViewBag.Title = "Login";
}
@section Styles{
    <style type="text/css">
        .center {
            width: 50%;
            margin: auto;
            border-radius: 2%;
            box-shadow: 0px 0px 5px 0.5px #000099;
            background: #e6fff5;
            padding-left: 10px;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }

        .inner-block {
        }

        .heading-text{
            text-align : center;
            padding: 2px;
            font-family : 'Times New Roman', Times, serif;
        }
    </style>
}

<div class="center">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {

        <h2 class="heading-text">Login</h2>
        <fieldset>
            @Html.Label("User Name")
            
            @Html.TextBox("Username")
            <br />
            @Html.Label("Password")

            @Html.Password("Password")
            <br />
            <label>
                @Html.CheckBox("Verification Checkbox") I am a Human

            </label>
            <br />
            <button type="submit">Login</button>

        </fieldset>

        <br />

        <br />
    }
    @Html.ActionLink("Sign Up ", "SignUp", "Account")@Html.Label("For a new account")

</div>