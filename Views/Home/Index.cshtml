
@{
    ViewBag.Title = "Get HealthCare Solutions Online";
}

@section Styles{
    <style type="text/css">

        .spaces {
            position: relative;
            margin: 0px -20px 0px -20px;
            text-align: center;
            color: #000099;
        }

        .img-width {
            height: 500px;
            width: 100%;
        }

        .img-size {
            width: 100%;
            height: 100% !important;
            object-fit: fill;
        }

        .topleft {
            position: absolute;
            top: 2em;
            left: 26px;
            font-size: 3.5em;
            font-weight: bolder;
            font-family: 'Times New Roman', Times, serif;
            text-shadow: 1px 1px 5px #00ff99;
        }

        @@media screen and (max-width: 600px) {
            div.topleft {
                font-size: 2.5em;
                top: 3em;
            }
        }

        .whyeh-wrapper {
            padding: 10px;
        }

        .whyeh-text-head {
            font-size: 4rem;
            font-family: initial;
            display: flex;
            align-items: center;
            justify-content: space-around;
            color: #4682B4;
        }

        .whyeh-main-content {
            padding: 5px;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            column-gap: 50px;
        }

        @@media all and (max-width:765px) {
            .whyeh-main-content {
                padding: 5px;
                display: grid;
                grid-template-columns: repeat(1, 1fr);
                gap: 10px;
            }

            .column:nth-child(-n+3){
                border-bottom:1px solid gray;
                padding-bottom:25px;
            }
        }

        .column {
            display:flex;
            justify-content:flex-start;
            align-content:flex-start;
            padding:5px;            
        }
        .column:nth-child(-n+2){
            border-bottom:1px solid gray;
            padding-bottom:25px;
        }

        .col-logo{
            margin-top:10px;
            padding:2px;
        }
        .col-description{
            color:gray;
            padding:5px;
        }

       
        .col-description p {
            margin-left:12px;
        }

        .column-head-pos{
            padding:3px;
            margin-left:10px;
        }
        .column-head{            
            font-size:2rem;
            color:black;
        }
        .col-logo-pos{
            margin-top:15px;
        }
    </style>
}

<div class="spaces">
    <div id="imageCarousel" data-ride="carousel" class="carousel slide" data-wrap="true" data-interval="5000">
        <ol class="carousel-indicators">
            <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#imageCarousel" data-slide-to="1"></li>
            <li data-target="#imageCarousel" data-slide-to="2"></li>
            <li data-target="#imageCarousel" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
            <div class="item active img-width">
                <img src="~/Images/pexels-shvets-production-8413230.jpg" class="img-size" alt="E-HealthCare" />
                <div class="carousel-caption">
                    <h3>Welcome To E-HealthCare</h3>
                </div>
            </div>
            <div class="item img-width">
                <img src="~/Images/pexels-shvets-production-8413285.jpg" class="img-size" alt="E-HealthCare Services" />
                <div class="carousel-caption">
                    <h3>
                        Get Medical Help Online
                    </h3>
                </div>
            </div>
            <div class="item img-width">
                <img src="~/Images/aditya-romansa-5zp0jym2w9M-unsplash.jpg" class="img-size" alt="E-HealtCare Online" />
                <div class="carousel-caption">
                    <h3>
                        Online Facilities Available
                    </h3>
                </div>
            </div>
            <div class="item img-width">
                <img src="~/Images/camilo-jimenez-vGu08RYjO-s-unsplash.jpg" class="img-size" alt="E-HealthCare Help" />
                <div class="carousel-caption">
                    <h3>
                        Let Us know Your Problems
                    </h3>
                </div>
            </div>
        </div>
        <a href="#imageCarousel" class="carousel-control left" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a href="#imageCarousel" class="carousel-control right" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
