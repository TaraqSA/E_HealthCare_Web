@section Styles{
    <style type="text/css">

        .spaces {
            position: relative;
            margin: 0px -20px 0px -20px;
            text-align: center;
            color: #000099;
        }

        .img-width {
            height: 500px;
            width: 100%;
        }

        .img-size {
            width: 100%;
            height: 100% !important;
            object-fit: fill;
        }

        .topleft {
            position: absolute;
            top: 2em;
            left: 26px;
            font-size: 3.5em;
            font-weight: bolder;
            font-family: 'Times New Roman', Times, serif;
            text-shadow: 1px 1px 5px #00ff99;
        }

        @@media screen and (max-width: 600px) {
            div.topleft {
                font-size: 2.5em;
                top: 3em;
            }
        }

        .whyeh-wrapper {
            padding: 10px;
        }

        .whyeh-text-head {
            font-size: 4rem;
            font-family: initial;
            display: flex;
            align-items: center;
            justify-content: space-around;
            color: #4682B4;
        }

        .whyeh-main-content {
            padding: 5px;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            column-gap: 50px;
        }

        @@media all and (max-width:765px) {
            .whyeh-main-content {
                padding: 5px;
                display: grid;
                grid-template-columns: repeat(1, 1fr);
                gap: 10px;
            }

            .column:nth-child(-n+3) {
                border-bottom: 1px solid gray;
                padding-bottom: 25px;
            }
        }

        .column {
            display: flex;
            justify-content: flex-start;
            align-content: flex-start;
            padding: 5px;
        }

            .column:nth-child(-n+2) {
                border-bottom: 1px solid gray;
                padding-bottom: 25px;
            }

        .col-logo {
            margin-top: 10px;
            padding: 2px;
        }

        .col-description {
            color: gray;
            padding: 5px;
        }


            .col-description p {
                margin-left: 12px;
            }

        .column-head-pos {
            padding: 3px;
            margin-left: 10px;
        }

        .column-head {
            font-size: 2rem;
            color: black;
        }

        .col-logo-pos {
            margin-top: 15px;
        }



        /*patient review crousel division*/
        .patient-reviews {
            box-sizing: border-box;
            padding: 5px;
            margin: 2px;
        }

        .review-head {
            font-size: 4rem;
            font-family: initial;
            display: flex;
            align-items: center;
            justify-content: space-around;
            color: #4682B4;
            padding-top: 10px;
            margin-bottom: -15px;
        }

        .carousel-wrapper {
            position: relative;
            height: 550px;
            width: 100%;
            background-color: inherit;
            margin: 0 auto;
        }

        .carousel-content-wrapper {
            height: 100%;
            position: relative;
            overflow: hidden;
        }

        .carousel-slide {
            position: relative;
            height: 100%;
            padding: 0;
            margin: 0;
            list-style: none;
            transition: 0.3s ease-in;
        }

        .slide-content {
            display: grid;
            justify-items: center;
            margin: 0 auto;
            position: absolute;
            top: 0;
            bottom: 0;
            width: 100%;
        }

        .slide-image {
            position: absolute;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .prev-arrow {
            position: absolute;
            cursor: pointer;
            height: 25px;
            width: 25px;
            top: 45%;
            left: 5%;
            border-left: 8px solid hsla(30deg, 0%, 0%, 0.8);
            border-bottom: 8px solid hsla(30deg, 0%, 0%, 0.8);
            border-right: none;
            border-top: none;
            transform: rotate(45deg);
            background: transparent;
        }

        .next-arrow:hover {
            border-color: gray;
            box-shadow: 3px 3px 6px -3px rgba(0,0,0,0.7);
        }

        .prev-arrow:hover {
            border-color: gray;
            box-shadow: -4px 4px 5px -3px rgba(0,0,0,0.7);
        }

        .next-arrow {
            position: absolute;
            right: 5%;
            top: 45%;
            cursor: pointer;
            height: 25px;
            width: 25px;
            border-right: 8px solid hsla(30deg, 0%, 0%, 0.8);
            border-bottom: 8px solid hsla(30deg, 0%, 0%, 0.8);
            border-left: none;
            border-top: none;
            background: transparent;
            transform: rotate(-45deg);
        }

        .dot-container {
            position: absolute;
            bottom: 10%;
            width: 100%;
            padding: 12px 0px;
            background-color: transparent;
            display: flex;
            justify-content: center;
        }

        .dot {
            width: 10px;
            height: 10px;
            border: 1px solid black;
            border-radius: 50%;
            background-color: transparent;
            margin: 0 5px;
        }

            .dot:hover {
                cursor: pointer;
                box-shadow: 1px 1px 4px 1px rgba(0,0,0,0.7);
                background-color: black;
            }

            .dot.IsActive {
                width: 11px;
                height: 11px;
                box-shadow: 1px 1px 4px 1px rgba(0,0,0,0.7);
                background-color: black;
            }

        .is-hidden {
            display: none;
        }



        /*review comments content's division*/

        .review-main-content {
            display: grid;
            align-items: center;
            justify-items: center;
            width: 80%;
            height: 80%;
            gap: 80px;
            grid-template-columns: 1fr 1fr;
        }

        .card {
            height: fit-content;
            width: fit-content;
            padding: 10px;
            box-shadow: 0px 0px 5px 3px #cce1d1;
            color: gray;
        }

        .review-description {
            box-sizing: border-box;
            padding: 1rem;
        }

        .patient-details {
            display: flex;
            justify-content: center;
            box-sizing: border-box;
            padding: 0.5rem 0.5rem 1rem 0.5rem;
        }

        .patient-profile-pic {
            box-sizing: border-box;
            padding: 3px 5px;
        }

        .patient-name {
            box-sizing: border-box;
            padding: 5px;
            margin-top: 5px;
        }



        /*styles for disease info carousel*/
        .info-head {
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 4rem;
            font-family: initial;
            color: #4682B4;
            margin:0 0 20px 0;
        }


        .main-wrapper {
            height: 100%;
            width: 100%;
            overflow: hidden;
        }

        .main-slide {
            display: flex;
            width: 100%;
            height: 100%;
            margin: 1px;
        }

        .slide-container {
            --slider-index : 0;
            display: flex;
            gap:2%;
            flex-grow:1;        
            height: 100%;
            width: 90%;
            transition: 0.3s ease-in-out;
            transform:translateX(calc(var(--slider-index)*-109%));
        }

        .slide {
            display: flex;
            flex: 0 0 25%;
            justify-content: center;
            align-items: center;
            height: 100%;
            margin: 2px;
            background-color:inherit;
        }

        .arrow-container {
            box-sizing: border-box;           
            width: 5%;
            background-color: inherit;
            border: none;
            margin-top: 2px;
            z-index:10;
        }

            .arrow-container:hover {
                background-color: rgba(164, 187, 170, 0.2);
            }
                    
    
        .prev-slide-arrow {
            display: flex;
            justify-content: center;
            align-items: center;            
            cursor: pointer;
        }
        .text {
            font-size: 4rem;
        }

            .text:hover, .arrow-container:hover {
                font-size: 5rem;
                color: white;
            }

        .next-slide-arrow {
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 4rem;
            cursor: pointer;
        }

        .disease-card {
            box-sizing: border-box;
            box-shadow: 0px 0px 5px 3px #cce1d1;
            border-radius:2%;
        }
        .disease-card-img{
            width:100%;
            height:100%;
        }

        .disease-card-img > img{
            object-fit:cover;
            border-top-right-radius:2%;
            border-top-left-radius:2%;
            height:100%;
            width:100%;
            cursor:pointer;
        }
        .disease-card-description{
            position:relative;
            margin:0.5rem;
        }
        .disease-card-description > h2{
            font-size:2em;
            color:rgba(0, 0, 0, 0.8);
            margin:0.2rem 0 0.8rem 0;
            padding:2px;
        }

        .disease-name::after {
            content: '';
            display: block;
            position: relative;
            margin-top: 5px;
            width: 25%;
            left: 2%;
            border-bottom: 2px solid hsla(135, 73%, 39%, 0.19);
        }
            .disease-card-description > p {
                color: gray;
                margin: 0.2rem 0.5rem 0.8rem 0;
                padding: 4px;
            }
            
        .disease-card-button{
            box-sizing:border-box;
            margin:1rem;
        }


        /**/
        .Blogs-info-head {
            display: flex;
            justify-content: flex-start;
            align-items: center;
            font-size: 4rem;
            font-family: initial;
            color: #4682B4;
            margin: 0 0 2rem 2rem;
            border-bottom: 2px solid #4682B4;
        }
    </style>
}

