@model E_HealthCare_Web.ViewModels.UserLoginViewModel

@{
    ViewBag.Title = "Login";
}

@section Styles{
    <style type="text/css">
        .custom-font {            
            color: rgba(0,0,0,0.6);
        }

        .login-sec {
            font-family: 'Comic Sans MS';
            background-image: url('../Images/Hospital-theme-background.jpg');
            background-size: cover;
            background-color: rgba(223, 236, 226,0.9);
            background-blend-mode: lighten;
            min-height: inherit;
            margin: -20px -20px 0 -20px;
        }

        .login-main-body {
            display: flex;
            flex-wrap: wrap;
            width: 100%;
        }

        .login-input {
            flex: 0 1 40%;
            padding-top: 4rem;
        }

        .login-input-body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .img-log {
            flex: 0 1 20%;
            justify-content: flex-start;
        }

            .img-log > img {
                width: 400px;
                height: 300px;
                object-fit: cover;
            }

        .custhead {
            text-align: center;
            padding-top:1.5rem;
        }

        .custinput {
            padding:0.2rem;
        }

        hr {
            border-color:white;
        }

        .custEditor {
            min-width: 300px;
            height: 35px;
            border: 1px solid #ccc;
            border-radius: 4px;
            line-height: 1.42857143;
            color: #555555;
            box-shadow: inset 0 1px 1px rgba(0, 0, 0,0.08);
        }

            .custEditor:active, .custEditor:focus, .btn:active, .btn:focus {
                outline:1px solid #ccc;
                border:1px solid #ccc; 
            }

        .btn{
            min-width:300px;
        }

        .loginbtn > input{
            padding-bottom:0.3rem;
        }

        .loginbtn a{            
            text-decoration:none;
        }

        .actionlinks {
            display: flex;
            flex-direction: row;
            justify-content: space-around;
        }
    </style>
}

<section class="login-sec">
    <h1 class="custom-font custhead">Login</h1>
    <hr />
    <section class="login-main-body">
        <div class="img-log">
            <img src="~/Images/man-women-healthcare-removebg-preview.png" alt="login" />
        </div>
        <div class="login-input">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl }))
            {

                @Html.AntiForgeryToken()
            <div class="login-input-body">
                <div class="custinput">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "custEditor", @placeholder = " User Name" } })
                    <p>&nbsp;@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })&nbsp;</p>
                </div>
                <div class="custinput">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "custEditor", @placeholder = " Password" } })
                    <p>&nbsp;@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })&nbsp;</p>
                </div>
                <div class="loginbtn">
                    <input type="submit" value="Login" class="btn btn-success" />
                    <p>&nbsp;@Html.ValidationMessage("Failure", new { @class = "text-danger" })&nbsp;</p><br />
                    <P class="actionlinks">@Html.ActionLink("Forgot Password?", "ForgotPassword", null, new { @style = "font-size:small" })@Html.ActionLink("Regiser", "SignUp")</P>
                </div>
            </div>
            }


        </div>
    </section>

</section>